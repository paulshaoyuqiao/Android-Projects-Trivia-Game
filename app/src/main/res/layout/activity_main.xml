<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bluetriangle"
    tools:context="com.bignerdranch.android.mdbfirstminiappproject.MainActivity">

    <ImageView
        android:id="@+id/memberPic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/firstChoice"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/endGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimaryDark"
        android:text="End Game" />

    <Button
        android:id="@+id/fourthChoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/endGameButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPrimary"
        android:text="" />

    <Button
        android:id="@+id/thirdChoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fourthChoice"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPrimaryDark"
        android:text="" />

    <Button
        android:id="@+id/secondChoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/thirdChoice"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPrimary"
        android:text="" />

    <TextView
        android:id="@+id/scoreBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/endGameButton"
        android:layout_alignBottom="@+id/endGameButton"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:layout_toLeftOf="@+id/gameScore"
        android:layout_toStartOf="@+id/gameScore"
        android:text="Score:"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/gameScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/scoreBoard"
        android:layout_alignBottom="@+id/scoreBoard"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:text=""
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <Button
        android:id="@+id/firstChoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/secondChoice"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPrimaryDark"
        android:text="" />

    <TextView
        android:id="@+id/TimeRemaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/scoreBoard"
        android:layout_alignBottom="@+id/scoreBoard"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/endGameButton"
        android:layout_toRightOf="@+id/endGameButton"
        android:text="Time Remaining:"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        tools:text="Time Remaining:" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/scoreBoard"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/TimeRemaining"
        android:layout_toRightOf="@+id/TimeRemaining"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>
